{
  "compilerOptions": {
    "module": "es2015",
    "target": "ES2015",
    "noImplicitAny": false,
    "outDir": "built",
    "rootDir": ".",
    "allowJs": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "built"],
  "include": ["**/*.ts", "**/*.js"]
}
